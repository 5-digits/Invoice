<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{'layout.register' |trans({}, 'FOSUserBundle') }}</h3>
                </div>
                <div class="panel-body">
                    {#<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">#}
                        {#<input type="hidden" name="_csrf_token" value="{{ csrf_token('intention') }}">#}
                    {{ form_start(form, {'attr': {'class': 'fos_user_registration_register', 'id': 'register-form'} }) }}
                        <table class="table table-hover table-responsive table-condensed">
                            <tr>
                                <td>
                                    {{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}
                                </td>

                                <td>
                                    {{ form_widget(form.username) }}
                                    <span class="text-red">{{ form_errors(form.username) }}</span>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    {{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}
                                </td>

                                <td>
                                    {{ form_widget(form.email) }}
                                    <span class="text-red">{{ form_errors(form.email) }}</span>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    {{ 'form.password'|trans({}, 'FOSUserBundle') }}
                                </td>

                                <td>
                                    {{ form_widget(form.plainPassword.first) }}
                                    <span class="text-red">{{ form_errors(form.plainPassword.first) }}</span>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    {{ 'form.password_confirmation'|trans({}, 'FOSUserBundle') }}
                                </td>
                                <td>
                                    {{ form_widget(form.plainPassword.second) }}
                                    <span class="text-red">{{ form_errors(form.plainPassword.second) }}</span>
                                </td>
                            </tr>

                        </table>

                        <div><br></div>
                        <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-lg btn-danger btn-block"/>
                    {{ form_rest(form) }}
                    </form>
                    <div><br></div>
                    <a href="{{ path('fos_user_security_login') }}">
                        <button class="btn btn-lg btn-success btn-block">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</button>
                    </a>
                </div>
            </div>
         </div>
    </div>
</div>
