{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}

    {%  include 'head.html.twig' %}


    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{{'layout.login' |trans({}, 'FOSUserBundle') }}</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path("fos_user_security_check") }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <fieldset>
                                <div class="form-group">
                                    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="E-mail"/>
                                </div>
                                <div class="form-group">
                                    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="Password"/>
                                </div>
                                {#<div class="checkbox">#}
                                    {#<label>#}
                                        {#<input type="checkbox" id="remember_me" name="_remember_me" value="on" />#}
                                    {#</label>#}
                                {#</div>#}

                                {% if error %}
                                    <div class="text-red">{{ error|trans({}, 'FOSUserBundle') }}</div>
                                {% endif %}

                                <div><br></div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-lg btn-success btn-block" />
                                <div><br></div>
                            </fieldset>
                        </form>
                                <a href="{{ path('fos_user_registration_register') }}">
                                    <button class="btn btn-lg btn-danger btn-block">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</button>
                                </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock fos_user_content %}

