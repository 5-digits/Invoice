{% extends 'base.html.twig' %}

{% block body %}
    {% include 'top_menu.html.twig' %}
<div class="row">
    <div class="col-lg-9">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                   {{ 'label.client.list' | trans }}
                </h4>
            </div>
            <div class="panel-body">

                <ul class="list-inline">
                    <li>
                        <a href="{{ path('client_new') }}">
                            <button type="button" class="btn btn-xs btn-info">
                                {{ 'button.client.new' | trans }}
                            </button>
                        </a>
                    </li>
                </ul>

                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>

                        <th>
                            {{  'label.company.name' | trans}}
                        </th>
                        <th>
                            {{ 'label.client.name'  | trans }}
                        </th>

                        <th>{{ 'label.vatid' | trans }}
                        </th>
                        <th>
                            {{ 'label.address.city' | trans }}
                        </th>
                        <th>
                            {{ 'label.address.country' | trans }}
                        </th>

                        <th class="td-center">
                            {{ 'label.actions' | trans }}
                        </th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for client in clients %}
                        <tr>
                            <td>
                                <a href="{{ path('client_show', { 'id': client.id }) }}">
                                    {{ client.companyName }}
                                </a>
                            </td>

                            <td>{{ client.clientName }}</td>

                            <td>{{ client.vatId }}</td>

                            <td>{{ client.addressCity }}</td>
                            <td>{{ client.addressCountry }}</td>

                            <td class="td-center">
                                <ul class="list-inline">
                                    <li>
                                        <a href="{{ path('client_show', { 'id': client.id }) }}">
                                            <button type="button" class="btn btn-xs btn-success">
                                                {{ 'button.client.show' | trans }}
                                            </button>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="{{ path('client_edit', { 'id': client.id }) }}">
                                            <button type="button" class="btn btn-xs btn-info">
                                                {{ 'button.client.edit'| trans }}
                                            </button>
                                        </a>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{% endblock %}
