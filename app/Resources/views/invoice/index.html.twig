{% extends 'base.html.twig' %}

{% block body %}

    {% include 'top_menu.html.twig' %}

    <div class="row">
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        {{  'label.invoice.list' | trans }}
                    </h4>
                </div>
                <div class="panel-body">
                    <ul class="list-inline">
                        <li>
                            <a href="{{ path('invoice_new') }}">
                                <button type="button" class="btn btn-xs btn-info">
                                    {{  'button.invoice.new' | trans }}
                                </button>
                            </a>
                        </li>
                    </ul>
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th class="td-center">
                                    {{  'label.invoice' | trans }}
                            </th>
                            <th>
                                {{ 'label.date_of_issue' | trans }}
                            </th>
                            <th>
                                {{ 'label.payment_due' | trans }}
                            </th>
                            <th>
                                {{ 'label.company.name' | trans }}
                            </th>
                            <th class="td-center">
                                {{ 'label.actions' | trans }}
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                {#<td class="td-center">#}
                                {#<a href="{{ path('invoice_show', { 'id': invoice.id }) }}">{{ invoice.id }}</a>#}
                                {#</td>#}
                                <td class="td-center">
                                    <a href="{{ path('invoice_show', { 'id': invoice.id }) }}">
                                        {{ invoice.invoiceNumberPrefix }}{{ invoice.invoiceNumber }}
                                    </a>
                                </td>
                                <td>{% if invoice.dateOfIssue %}{{ invoice.dateOfIssue|date('Y-m-d') }}{% endif %}</td>

                                <td>{% if invoice.paymentDue %}{{ invoice.paymentDue|date('Y-m-d') }}{% endif %}</td>
                                <td>{{ invoice.companyName }}</td>
                                <td class="td-center">
                                    <ul class="list-inline">
                                        {#<li>#}
                                            {#<a href="{{ path('invoice_show', { 'id': invoice.id }) }}">#}
                                                {#<button type="button" class="btn btn-xs btn-success">#}
                                                        {#{{ 'button.invoice.show' | trans }}#}
                                                {#</button>#}
                                            {#</a>#}
                                        {#</li>#}
                                        <li>
                                            <a href="{{ path('invoice_edit', { 'id': invoice.id }) }}">
                                                <button type="button" class="btn btn-xs btn-info">
                                                   {{ 'button.invoice.edit' | trans }}
                                                </button>
                                            </a>
                                        </li>
                                        <li>
                                            <a href="{{ path('invoice_print', { 'id': invoice.id }) }}">
                                                <button type="button" class="btn btn-xs btn-success">
                                                    {{ 'button.invoice.print' | trans }}
                                                </button>
                                            </a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    </div>
{% endblock %}
