{% extends 'base.html.twig' %}

{% block body %}

    {% include 'top_menu.html.twig' %}

    <div class="row">
        <div class="col-lg-7">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>
                        {{ product.name }}
                    </h4>
                </div>
                <div class="panel-body">
                    <table class="table table-hover table-responsive table-condensed">

                        <tr>
                            <th>{{ 'label.product.code' | trans }}</th>
                            <td>{{ product.code }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.product.name' | trans }}</th>
                            <td>{{ product.name }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.product.pkwiu' | trans }}</th>
                            <td>{{ product.pkwiuCode }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.product.price.net' | trans }}</th>
                            <td>{{ product.priceNet }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.product.vat' | trans }}</th>
                            <td>{{ product.vatRate }}</td>
                        </tr>
                        <tr>
                            <th>{{ 'label.product.price.gross' | trans }}</th>
                            <td>{{ product.priceGross }}</td>
                        </tr>
                        <tr>
                            <th class="td-va-top">{{ 'label.product.notes' | trans }}</th>
                            <td>{{ product.notes }}</td>
                        </tr>

                    </table>
                    <table class="table-button">
                        <tr>
                            <td>
                                <a href="{{ path('product_edit', { 'id': product.id }) }}">
                                    <button type="button"
                                            class="btn btn-xs btn-info">{{ 'button.show.edit' | trans }}</button>
                                </a>
                            </td>

                            <td>
                                <a href="{{ path('product_index') }}">
                                    <button type="button"
                                            class="btn btn-xs btn-success">{{ 'button.show.list' | trans }}</button>
                                </a>
                            </td>

                            <td>
                                {{ form_start(delete_form) }}
                                <input class="btn btn-xs btn-danger" type="submit"
                                       value="{{ 'button.show.delete' | trans }}">
                                {{ form_end(delete_form) }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
