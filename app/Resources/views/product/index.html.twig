{% extends 'base.html.twig' %}

{% block body %}

    {%  include 'top_menu.html.twig' %}


<div class="row">
    <div class="col-lg-8">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>
                    {{  'label.product.list' | trans }}
                </h4>
            </div>
            <div class="panel-body">
                <ul class="list-inline">
                    <li>
                        <a href="{{ path('product_new') }}">
                            <button type="button" class="btn btn-xs btn-info">
                                {{  'button.product.new' | trans }}
                            </button>
                        </a>
                    </li>
                </ul>
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>{{ 'label.product.code' | trans }}</th>
                        <th>{{ 'label.product.name' | trans }}</th>
                        <th>{{ 'label.product.unit' | trans }}</th>
                        <th>{{ 'label.product.price.net' | trans }}</th>
                        <th>{{ 'label.product.vat' | trans }}</th>
                        <th>{{ 'label.product.price.gross' | trans }}</th>
                        <th>{{ 'label.actions' | trans }}</th>
                    </tr>
                    {% for product in products %}
                    <tr>
                        <td>{{ product.code }}</td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.unit }}</td>
                        <td>{{ product.priceNet }}</td>
                        <td>{{ product.vatRate }}</td>
                        <td>{{ product.priceGross }}</td>
                        <td class="td-center">
                            <ul class="list-inline">
                                <li>
                                    <a href="{{ path('product_show', { 'id': product.id }) }}">
                                        <button type="button" class="btn btn-xs btn-success">
                                            {{ 'button.product.show' | trans }}
                                        </button>
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('product_edit', { 'id': product.id }) }}">
                                        <button type="button" class="btn btn-xs btn-info">
                                            {{ 'button.product.edit' | trans }}
                                        </button>
                                    </a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    {% endfor %}

                </table>
            </div>
        </div>
    </div>
</div>


{% endblock %}
